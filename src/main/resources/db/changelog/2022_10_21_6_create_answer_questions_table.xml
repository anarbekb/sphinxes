<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
                   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                   xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">
    <changeSet id="21-10-2022-create-questionnaires-table" author="abalmukanov">
        <createTable tableName="answer_questions" schemaName="sphinxex" remarks="Вопросы с рузультатами ответов">
            <column name="id" type="bigint" autoIncrement="true" remarks="Индентификатор записи">
                <constraints primaryKey="true"/>
            </column>
            <column name="evaluation" type="smallint">
                <constraints nullable="true"/>
            </column>
            <column name="point" type="varchar(500)" remarks="Вопрос">
                <constraints nullable="false"/>
            </column>
            <column name="answer" type="varchar(1000)" remarks="Ответ">
                <constraints nullable="false"/>
            </column>
            <column name="answer_topic_id" type="bigint" remarks="Связь с темой ответов">
                <constraints nullable="false"
                             foreignKeyName="fk_answer_questions_answer_topics_id"
                             references="sphinxex.answer_topics(id)"
                             deferrable="true"
                             initiallyDeferred="true"/>
            </column>
            <column name="level" type="varchar(10)" remarks="Уровень вопроса">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>
</databaseChangeLog>
